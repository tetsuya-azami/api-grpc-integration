<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="dsql" targetRuntime="MyBatis3Kotlin">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost/test"
                        userId="root"
                        password="root"/>
        <javaTypeResolver>
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.example.orderprocessing.repository.entity.generated"
                            targetProject="src/main/kotlin"/>
        <javaClientGenerator targetPackage="com.example.orderprocessing.repository.mapper.generated"
                             targetProject="src/main/kotlin"/>

        <table tableName="orders" schema="test"/>
        <table tableName="items" schema="test"/>
        <table tableName="order_items" schema="test"/>
        <table tableName="attributes" schema="test"/>
        <table tableName="item_attributes" schema="test"/>
        <table tableName="order_item_attributes" schema="test"/>
        <table tableName="payment_methods" schema="test"/>
    </context>
</generatorConfiguration>