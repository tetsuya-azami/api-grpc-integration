<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="dsql" targetRuntime="MyBatis3Kotlin">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost/test"
                        userId="root"
                        password="root"/>

        <javaModelGenerator targetPackage="repository.entity.generated" targetProject="src/main/java"/>
        <javaClientGenerator targetPackage="repository.mapper.generated" targetProject="src/main/java"/>

        <table tableName="orders" schema="test"/>
    </context>
</generatorConfiguration>